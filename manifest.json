{
    "manifest_version": 3,
    "name": "Distraction-Free YouTube",
    "version": "1.0",
    "description": "Distraction-Free YouTube: Hides all unnecessary YouTube content from the home page and sidebar, including Shorts and recommendations, to help you stay focused and avoid distractions.",
    "permissions": [
        "scripting",
        "webRequest"
    ],
    "background": {
       "service_worker": "background.js"
    },
    "action": {
        "default_title": "Distraction-Free YouTube",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "512": "icon512.png"
          }
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "512": "icon512.png"
      },
    "host_permissions": [
        "*://www.youtube.com/*"
    ]
}